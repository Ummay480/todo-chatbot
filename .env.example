# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/todo_chatbot"

# Qdrant Vector Database Configuration (Optional - for conversation context embeddings)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=todo_conversations

# Authentication
BETTER_AUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-hex-32"
BETTER_AUTH_URL=http://localhost:3000

# OpenAI Configuration (Required for chatbot)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Application Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Chat Configuration
MAX_CONVERSATION_HISTORY=50
CHAT_TIMEOUT_SECONDS=30